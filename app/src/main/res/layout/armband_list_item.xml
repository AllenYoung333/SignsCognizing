<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/border_bottom_bg_img"
    android:orientation="horizontal"
    android:paddingBottom="5dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/选择手环"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/myo_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3effffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/armband_list_item_info_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:gravity="start"
            android:textColor="#000000"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/both_hand_check_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2effffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_select_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#3effffff"
                    android:gravity="end"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/armband_select_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />
            </LinearLayout>
            <Button
                android:id="@+id/button_ping_armband"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:text="ping" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>